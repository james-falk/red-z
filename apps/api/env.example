# ===========================================
# ENVIRONMENT: Development vs Production
# ===========================================
# For local dev: use localhost URLs
# For Render production: use Render service URLs
# ===========================================

# Server Port (Render uses dynamic PORT, local uses 4000)
PORT=4000

# Database Connection
# DEV:  postgresql://postgres:postgres@localhost:5432/fantasy_red_zone?schema=public
# PROD: Use Render PostgreSQL internal connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fantasy_red_zone?schema=public"

# Auth Secret (MUST MATCH apps/web NEXTAUTH_SECRET)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"

# Admin Email (will be promoted to admin role on seed)
ADMIN_EMAIL="admin@example.com"

# Node Environment
NODE_ENV="development"

# Disable Internal Cron Jobs (set to "true" in production if using Render Cron Jobs)
# DEV:  false (use internal cron for convenience)
# PROD: true (use Render Cron Jobs service)
DISABLE_CRON="false"

# External API URLs
SLEEPER_API_URL="https://api.sleeper.app/v1"
