# ===========================================
# ENVIRONMENT: Development vs Production
# ===========================================
# For local dev: use localhost URLs
# For Render production: use Render service URLs
# ===========================================

# Server Port (Render uses dynamic PORT, local uses 4000)
PORT=4000

# Database Connection
# DEV:  postgresql://postgres:postgres@localhost:5432/fantasy_red_zone?schema=public
# PROD: Use Render PostgreSQL internal connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fantasy_red_zone?schema=public"

# Auth Secret (MUST MATCH apps/web NEXTAUTH_SECRET)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"

# Admin Email (will be promoted to admin role on seed)
ADMIN_EMAIL="admin@example.com"

# Node Environment
NODE_ENV="development"

# Disable Internal Cron Jobs (set to "true" in production if using Render Cron Jobs)
# DEV:  false (use internal cron for convenience)
# PROD: true (use Render Cron Jobs service)
DISABLE_CRON="false"

# External API URLs
SLEEPER_API_URL="https://api.sleeper.app/v1"

# ===========================================
# EMAIL NOTIFICATIONS (Phase 1 - Skeleton)
# ===========================================
# Enable email notifications (daily/weekly digests)
# Set to "true" to enable, "false" to disable
ENABLE_EMAIL_NOTIFICATIONS="false"

# Email sender address (requires domain verification with Resend)
# Free tier: Use "onboarding@resend.dev" and can only send to your verified email
# Paid tier: Use your@domain.com after domain verification
EMAIL_NOTIFICATION_FROM="onboarding@resend.dev"

# Resend API Key (already configured for verification emails)
# RESEND_API_KEY="re_..." (inherited from existing config)

# ===========================================
# AI Configuration (Phase 2 - Ready to Activate)
# ===========================================
# Enable AI features (chat, recommendations, auto-tagging)
AI_ENABLED="false"

# OpenAI Configuration (Recommended for testing)
# Sign up: https://platform.openai.com/
# Cost: $5 free credits for new accounts, then $0.15 per 1M tokens (GPT-4o-mini)
OPENAI_API_KEY=""

# Anthropic Configuration (Alternative)
# Sign up: https://console.anthropic.com/
# Cost: No free tier, $0.80 per 1M tokens (Claude 3.5 Haiku)
ANTHROPIC_API_KEY=""

# ===========================================
# Social Media APIs (Phase 3 - High Cost, Disabled by Default)
# ===========================================
# WARNING: Twitter API costs $100+/month minimum
# Consider using RSS feeds as free alternatives

ENABLE_SOCIAL_INGESTION="false"

