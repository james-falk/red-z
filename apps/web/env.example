# ===========================================
# ENVIRONMENT: Development vs Production
# ===========================================
# For local dev: use localhost URLs
# For Vercel production: use production URLs
# ===========================================

# NextAuth Configuration
# DEV:  http://localhost:3000
# PROD: https://your-app.vercel.app
NEXTAUTH_URL="http://localhost:3000"

# Auth Secret (MUST MATCH apps/api NEXTAUTH_SECRET)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"

# Google OAuth (optional, set up for production)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Database Connection
# DEV:  postgresql://postgres:postgres@localhost:5432/fantasy_red_zone?schema=public
# PROD: Use Render PostgreSQL external connection string
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/fantasy_red_zone?schema=public"

# API Backend URL
# DEV:  http://localhost:4000
# PROD: https://your-api.onrender.com
NEXT_PUBLIC_API_URL="http://localhost:4000"

# Application Base URL (for email verification links)
# DEV:  http://localhost:3000
# PROD: https://your-app.vercel.app
APP_URL="http://localhost:3000"

# Email Configuration
# DEV: LOG_EMAILS=true (prints to console, no SMTP needed)
# PROD: LOG_EMAILS=false + configure SMTP or Resend
LOG_EMAILS="true"
EMAIL_FROM="Fantasy Red Zone <noreply@fantasyredzone.com>"

# SMTP Configuration (production only)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# Alternative: Resend (simpler for production)
# RESEND_API_KEY="re_xxxxx"

# ===========================================
# AI Configuration (Phase 2 - Controlled by Backend)
# ===========================================
# Enable AI chat widget in the frontend
# NOTE: Backend must have AI_ENABLED=true and API keys configured
NEXT_PUBLIC_AI_ENABLED="false"